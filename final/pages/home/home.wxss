  align-items: center;
  border-radius: 5rpx;
  


 }
  
 .swiper_container {
  height: 40px;
  width: 100%;

 }
  
 .swiper_item {
  text-align: center;
  line-height:400rpx;
  height: 100rpx;
  width: 100%;
  font-size: 1.3rem;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: black;

 }
  
 .modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  padding: 10px;
}
 
.modal-dialog {
  overflow: hidden;
  position: fixed;
  margin-right: 30px;
  background: #f9f9f9;
 

}

.view-image{
  width: 600rpx;
  height: 600rpx;
  justify-content: center;
}



.swiper image {
  width: 100%;
  height: auto;
}



.swiper-container2{
  
  position: relative;
 }
 .swiper-container2 .swiper{
  height: 300rpx;
 }
 .swiper-container2 .swiper .img{
  width: 100%;
  height: 100%;
 }
 .swiper-container2 .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
 }
 .swiper-container2 .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
 }
 .swiper-container2 .dots .dot.active{
  width: 24rpx;
  background: #f80;
 }